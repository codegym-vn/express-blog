extends layout

block content
    h1 Create new blog

    if message
        .message #{message}
    form(method="post", enctype="multipart/form-data")
        .form-group
            label Title
            input(name="title").form-control
        .form-group
            label Content
            textarea(name="content").form-control
        .form-group
            label Feature image
            input(type="file", name="feature")
        .form-group
            button.btn.btn-success Create